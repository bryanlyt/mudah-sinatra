<link rel="stylesheet" href="/css/loginform.css">

<div class="container text">
	<h1 class="login-form-heading">Create Your Account</h1>
  	<br>
		<form class="login-form" action="/register" method="post">

			<input type="text" class="form-control" placeholder="Name" required autofocus name="user[name]">
				<br>
			<input type="email" class="form-control" placeholder="Email" required name="user[email]">
				<br>
			<input type="password" class="form-control" placeholder="Password" required name="user[password]">
				<br>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>

		</form>
</div> 
